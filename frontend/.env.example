# Front-end environment configuration for Predictive Patterns (Vue 3 + Vite)

# Base URL for API requests (defaults to the backend proxy when omitted)
VITE_API_URL=http://localhost:8000

# Laravel Echo / Pusher configuration
# This key must match the backend's PUSHER_APP_KEY (or REVERB_APP_KEY when using Reverb's Pusher protocol)
VITE_PUSHER_APP_KEY=local-key

# Hosted Pusher connections require a cluster (defaults to mt1)
VITE_PUSHER_APP_CLUSTER=mt1

# Self-hosted connections require host/port/scheme information
VITE_PUSHER_HOST=localhost
VITE_PUSHER_PORT=6001
VITE_PUSHER_SCHEME=http

# Optional overrides
# Whether TLS should be forced (derived automatically from VITE_PUSHER_SCHEME)
# VITE_PUSHER_FORCE_TLS=false
# Space-separated list of allowed transports (defaults to ws and wss)
# VITE_PUSHER_ENABLED_TRANSPORTS="ws wss"

# App name for meta tags (optional)
VITE_APP_NAME="Predictive Patterns"
