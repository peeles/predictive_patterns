# Front-end environment configuration for Predictive Patterns (Vue 3 + Vite)
# Base URL for API requests (default to the backend proxy when omitted)
VITE_API_URL=http://localhost:8000

# Broadcast driver and credentials for real-time updates via Laravel Reverb
VITE_BROADCAST_DRIVER=reverb
# This key must match the backend's REVERB_APP_KEY
VITE_BROADCAST_KEY=local-key
# Host and port of the Reverb WebSocket server
VITE_BROADCAST_HOST=localhost
VITE_BROADCAST_PORT=8080
# Whether to use TLS when connecting to the broadcast server (true/false)
VITE_BROADCAST_TLS=false
# Transport mode (only 'ws' is supported currently)
VITE_BROADCAST_MODE=ws

# Optional Reverb-specific variables (these can be omitted if above values are set)

# App name for meta tags (optional)
VITE_APP_NAME="Predictive Patterns"

# Reverb WebSocket Configuration

# Reverb WebSocket Configuration
VITE_REVERB_APP_KEY=local-key
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=8080
VITE_REVERB_SCHEME=http
