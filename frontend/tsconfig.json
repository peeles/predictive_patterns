{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "types": [
      "vitest",
      "vite/client",
      "@playwright/test",
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
